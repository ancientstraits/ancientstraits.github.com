{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declarationDir": "out/types",
    "outDir": "out",
  },
  "include": ["src/*.ts"],
}